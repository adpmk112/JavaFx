   <children>
      <ComboBox fx:id="comboBox" layoutX="225.0" layoutY="127.0" onAction="#onComboBoxChange" prefWidth="150.0" promptText="Choose Laptop" />
      <TextField fx:id="input" layoutX="190.0" layoutY="215.0" prefHeight="25.0" prefWidth="220.0" promptText="Enter Brandname" />
      <Button layoutX="231.0" layoutY="265.0" mnemonicParsing="false" onAction="#onAddBtnClick" prefWidth="51.0" text="Add" />
      <Button layoutX="324.0" layoutY="265.0" mnemonicParsing="false" onAction="#onDelBtnClick" text="Delete" />
   </children>
</AnchorPane>
